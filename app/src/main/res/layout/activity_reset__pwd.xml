<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reset_PwdActivity">

    <TextView
        android:id="@+id/RP_ET1"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="145dp"
        android:gravity="center"
        android:text="New Password"
        android:textColor="#0E0E0E"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/RP_et1"
        android:layout_width="248dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="14dp"
        android:layout_toEndOf="@+id/RP_ET1"
        android:layout_toRightOf="@+id/RP_ET1"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter New Password"
        android:inputType="textPersonName"
        android:textColor="#75FFFFFF" />

    <TextView
        android:id="@+id/RP_ET2"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="211dp"
        android:gravity="center"
        android:text="Confirm Password"
        android:textColor="#050505"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/RP_et2"
        android:layout_width="238dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="Re-Enter Password"
        android:inputType="textPersonName"
        android:textColor="#7AFFFFFF" />

    <Button
        android:id="@+id/RP_Confirm"
        android:layout_width="114dp"
        android:layout_height="60dp"
        android:layout_below="@+id/RP_et2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="226dp"
        android:layout_marginLeft="226dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="290dp"
        android:background="@drawable/rounded_corner_red"
        android:text="Confirm"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>